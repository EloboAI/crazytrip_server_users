# CrazyTrip User Session Server - Environment Configuration

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
SERVER_WORKERS=4
SERVER_ENVIRONMENT=development

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crazytrip_users
DATABASE_USER=crazytrip_user
DATABASE_PASSWORD=moti
DATABASE_MAX_CONNECTIONS=10

# Authentication Configuration
AUTH_JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
AUTH_ACCESS_TOKEN_EXPIRATION_MINUTES=15
AUTH_REFRESH_TOKEN_EXPIRATION_HOURS=24
